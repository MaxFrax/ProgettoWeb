<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Servlets -->
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>it.unitn.disi.buybuy.auth.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.unitn.disi.buybuy.auth.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivateAccount</servlet-name>
        <servlet-class>it.unitn.disi.buybuy.auth.ActivateAccount</servlet-class>
    </servlet>
    <!-- Servlets mapping -->
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>it.unitn.disi.buybuy.shop.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivateAccount</servlet-name>
        <url-pattern>/activate_account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <!-- Application config -->
    <context-param>
        <description>The url of the JDBC persistence system database position</description>
        <param-name>dburl</param-name>
        <param-value>jdbc:derby:/Users/maxfrax/NetBeansProjects/BuyBuy/db</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.disi.listeners.WebAppContextListener</listener-class>
    </listener>
    <error-page>
        <location>/error.jsp</location>
    </error-page>
</web-app>
